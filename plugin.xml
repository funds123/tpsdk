	<!-- ios -->
    <platform name="ios">
		
        <!-- Cordova 2.5+ -->
        <config-file target="config.xml" parent="/*">
            <feature name="TPSDK">
                <param name="ios-package" value="CDVTPSKD" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
		
        <header-file src="src/ios/CDVTPSKD.h" />
